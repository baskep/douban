doctype
html
  head
    meta(charset="utf-8")
    title #{title}
    include ../../includes/head
    style.
      .default {
        margin-top:100px;
      }
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand(href="/") 导航条
        if user
          p.navbar-text.navbar-right
            span 欢迎您,#{user.username}
            span &nbsp;|&nbsp;
            a.navbar-link(href="#" onclick='logout()') 注销
        else
          p.navbar-text.navbar-right
            a.navbar-link(href="#", data-toggle="modal", data-target="") 注册
            span &nbsp;|&nbsp;
            a.navbar-link(href="#", data-toggle="modal", data-target="") 登录
    .container.default
      .row
       .form-group
          h1.col-sm-2 音乐分类信息录入
      hr
      .row
        form.form-horizontal(method="post", action="/saveMusicCategory") 
          .form-group
            label.col-sm-2.control-label(for="inputMusicCategory") 音乐分类
            .col-sm-10
              input#inputMusicCategory.form-control(type="text", name="musicCategory[name]", value=musicCategory.name)
          .form-group
            .col-sm-10
            button.btn.btn-default(type="submit") 录入
  script(src="/js/public.js")