#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../_pad-stream@1.2.0@pad-stream/cli.js" "$@"
  ret=$?
else 
  node  "$basedir/../../../_pad-stream@1.2.0@pad-stream/cli.js" "$@"
  ret=$?
fi
exit $ret
